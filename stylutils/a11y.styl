// screen-reader and rtl-friendly hiding
_sr-only($mode=normal) {
    position: absolute
    width: 1px
    height: 1px
    overflow: hidden
    clip: rect(0, 0, 0, 0)
    opacity: .00001
    pointer-events: none
    margin: -1px  if $mode!=soft
}
// undo _sr-only() on :focus and :active
_sr-only--undo($mode=normal) {
    width: auto
    height: auto
    overflow: visible
    clip: auto
    opacity: 1
    pointer-events: auto
    margin: 0  if $mode!=soft
}

_sr-only-focusable( $mode=normal ) {
    _sr-only($mode);

    &:active,
    &:focus {
        z-index: 99999;
        _sr-only--undo($mode);
    }
}
